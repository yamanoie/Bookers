<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>

		<tr>
			<% @books.each do |book| %>
				<td><%= @book.title%></td>
				<td><%= @book.body%></td>
			<% end %>
			<td><%= link_to "Show" , book_path(book) %></td>
			<td><%= link_to "Edit" , edit_book_path(book) %></td>
			<td><%= link_to "Destroy" , book_path(@book) method: :delete %></td>

		</tr>


	</tbody>
</table>
<h2>New book</h2>

<%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<%= f.submit "Create Book" %>

<% end %>
