<h1>Editing Book</h1>
<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %> error </h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
<% end %>


<%= form_for(@book) do |f| %>
<div class="form-title">
	<%= f.label :title %>
	<%= f.text_field :title %>
</div>
<div class="form-body">
	<%= f.label :body %>
	<%= f.text_area :body %>
</div>
	<div class="btn"><%= f.submit "Update Book" %></div>


<div class="link">
<%= link_to "show", book_path(@book.id) %>
|
<%= link_to "Back", books_path %>
</div>
<% end %>