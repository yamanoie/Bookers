<h1>Editing Book</h1>
<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %> error </h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
<% end %>


<%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<%= f.submit "Update Book" %>



<%= link_to "show", book_path(@book.id) %>
|
<%= link_to "Back", books_path %>

<% end %>